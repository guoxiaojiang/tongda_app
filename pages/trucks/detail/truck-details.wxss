@import "../../../common/ui.wxss";

.head {
  height: 420rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
}

.nick {
  margin: 28rpx 0 20rpx 20rpx;
  font-size: 28rpx;
  color:#686868;
}

.userinfo {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color:#686868;
}

.grade {
  width: 33%;
  font-size: 24rpx;
  margin: 28rpx 0 20rpx 20rpx;
  text-align: center
}

.grades {
  display: flex;
  align-items: center;
}


.bottom {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
}

.left {
  width: 50%;
  height: 100%;
  background: #1AAD19;
  float: left;
}

.right {
  width: 50%;
  height: 100%;
  float: left;
}
.right-address {
  width: 50%;
  height: 100%;
  background: #e3211e;
  float: left;
}
.right-service {
  width: 50%;
  height: 100%;
  background: #ff9800;
  float: left;
}

.text {
  display: block;
  color: white;
  line-height: 100rpx;
  text-align: center;
  font-size: 25rpx;
}

