@import "../../../common/ui.wxss";

page {
  background-color: #f5f5f5;
}

.head {
  height: 420rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
}

.filter {
  filter: blur(24px);
  height: 420rpx;
  width: 100%;
  position: absolute;
  z-index: -10;
}

.mTitle {
  font-size: 30rpx;
  color: white;
}
.buttons {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
}

.left {
  width: 50%;
  height: 100%;
  background: #1AAD19;
  float: left;
}

.right {
  width: 50%;
  height: 100%;
  float: left;
}
.right-navi-from {
  width: 50%;
  height: 100%;
  background: #e3211e;
  float: left;
}
.right-navi-to {
  width: 50%;
  height: 100%;
  background: #ff9800;
  float: left;
}
.bt-text {
  display: block;
  color: white;
  line-height: 100rpx;
  text-align: center;
  font-size: 25rpx;
}

.call {
  background-color: #009900;
  width: 50%;
  text-align: center;
  line-height: 94rpx;
  color: #fff;
  float:right;
  font-size: 26rpx;
  margin:6rpx;
}

.navi {
  background-color: #d43e37;
  width: 50%;
  text-align: center;
  line-height: 94rpx;
  color: #fff;
  font-size: 26rpx;
  margin:6rpx;
}
.navi-down {
  background-color: #ff0000;
  width: 50%;
  text-align: center;
  line-height: 94rpx;
  color: #fff;
  font-size: 26rpx;
  margin:6rpx;
}

.space {
  margin-right: 30rpx;
}

.flex {
  height: 120rpx;
  overflow: hidden;
}

.price {
  margin: 28rpx 0 20rpx 28rpx;
  font-size: 36rpx;
  color: #ff0000
}

.details {
  display: flex;
  align-items: flex-end;
}

.rmb {
  margin: 24rpx 0 22rpx 8rpx;
  font-size: 26rpx;
  color:#999999;
}
